@page "/admin/hostel-edit/{id:guid?}"
@rendermode InteractiveAuto
@inject AuthenticationStateProvider GetAuthenticationStateAsync
@inject NavigationManager NavigationManager
@inject IHostelAdminRepository HostelAdminRepository
@attribute [Authorize(Roles = "Admin")]

@* InjectionCodePlaceholder *@
@* @inject IToDoListAdminRepository ToDoListAdminRepository *@

  @if (Id.Equals(Guid.Empty))
  {
    <PageTitle>Hostel Creation</PageTitle>
  }
  else
  {
    <PageTitle>Hostel Modification</PageTitle>
  }

<section>
  @if (Id.Equals(Guid.Empty))
  {
    <h1>Hostel Creation</h1>
  }
  else
  {
    <h1>Hostel Modification</h1>
  }
  <article>
    <EditForm class="container" Model="hostelAdminEditViewModel" OnSubmit="HandleSubmit">

      <div class="row">
        <div class="col">
          <label>
            Name:
            <InputText @bind-Value="hostelAdminEditViewModel.Name" data-testid="hostelAdminEditName" />
          </label>
        </div>
      </div>
      @* EditRowCodePlaceholder *@

      <div class="row">
        <div class="col">
          @if (!Id.Equals(Guid.Empty))
          {
            <button @onclick="Remove" type="button" class="btn btn-danger">Remove</button>
          }
        </div>
        <div class="col">
          <a href="/admin/hostel-list">Cancel</a>
          @if (Id.Equals(Guid.Empty))
          {
            <button type="submit" class="btn btn-primary">Create</button>
          }
          else
          {
            <button type="submit" class="btn btn-primary">Modify</button>
          }
         </div>
      </div>
    </EditForm>
  </article>
</section>

@code {
  [Parameter]
  public Guid Id { get; set; }
  HostelAdminEditViewModel hostelAdminEditViewModel { get; set; } = new HostelAdminEditViewModel();

  @* ListDeclarationCodePlaceholder *@

  protected override async Task OnInitializedAsync()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    await base.OnInitializedAsync();

    @* OnInitializedCodePlaceholder *@
  }

  protected override async Task OnParametersSetAsync()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    if (Id.Equals(Guid.Empty))
    {
      return;
    }

    var databaseHostelAdminDto = await HostelAdminRepository.GetByIdAsync(userName, Id);

    if (databaseHostelAdminDto == null)
    {
      hostelAdminEditViewModel = new HostelAdminEditViewModel();
    }
    else
    {
      hostelAdminEditViewModel = HostelAdminEditViewModel.FromHostelAdminDto(databaseHostelAdminDto);
    }
  }

  async Task HandleSubmit()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    @* RequiredPropertyPlaceholder *@

    var hostelAdminDto = HostelAdminEditViewModel.ToHostelAdminDto(hostelAdminEditViewModel);
    hostelAdminDto.ApplicationUserName = userName;

    if (Id.Equals(Guid.Empty))
    {
      var newHostelAdminDto = await HostelAdminRepository.AddAsync(hostelAdminDto);

      if (newHostelAdminDto == null)
      {
        return;
      }

      NavigationManager.NavigateTo($"/admin/hostel-edit/{newHostelAdminDto.Id}");
    }
    else
    {
      await HostelAdminRepository.EditAsync(hostelAdminDto);
    }
  }

  async Task Remove()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name!;

    if (userName == null)
    {
      return;
    }

    if (Id.Equals(Guid.Empty))
    {
      return;
    }

    await HostelAdminRepository.DeleteAsync(userName, Id);
    NavigationManager.NavigateTo($"/admin/hostel-list");
  }

  @* OnChangeCodePlaceholder *@
}
