@page "/admin/hostel/add"
@page "/admin/hostel/edit/{HostelId:guid?}"
@rendermode InteractiveServer
@implements IDisposable
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>Hostel @(IsAdd ? "Add" : "Edit")</PageTitle>

@if (Hostel is null && !Busy && !IsAdd)
{
  <p>Could not find Hostel with id @HostelId.</p>
}
else
{
    @* EmulatorList="EmulatorList" *@
  <HostelForm
    Busy="Busy" 
    CancelRequest="Cancel"
    DbHostel="DbHostel" 
    Hostel="Hostel" 
    IsAdd="IsAdd"
    ValidationResult="@(async (success) => await ValidationResultAsync(success))"
  />
}

@if (Error)
{
  <br />
  <div class="alert alert-danger">Failed to @(IsAdd ? "add" : "update") the Hostel (@ErrorMessage).</div>
}

@code {
  [Parameter]
  public Guid? HostelId { get; set; }

  private bool IsAdd => HostelId == null;

  private ApplicationDbContext? Context { get; set; }

  private Hostel? Hostel { get; set; }

  private Hostel DbHostel { get; set; } = new Hostel();

  @* ListDeclarationCodePlaceholder *@
  @* private List<Emulator> EmulatorList { get; set; } = new List<Emulator>();*@

  private bool Busy;

  private bool Error;

  private string ErrorMessage = string.Empty;

  protected override async Task OnInitializedAsync()
  {
    Busy = true;

    try
    {
      Context = DbFactory.CreateDbContext();

      @* LoadListCodePlaceholder *@
      @* if (Context.Emulators != null)
      {
        EmulatorList = await Context.Emulators.OrderBy(e => e.Name).ToListAsync();
      } *@

      if (IsAdd)
      {
        Hostel = new();
      }
      else if (Context is not null && Context.Hostels is not null)
      {
        var hostel = await Context.Hostels
            @* IncludeListCodePlaceholder *@
            @* .Include(e => e.Emulator) *@
            .SingleOrDefaultAsync(x => x.Id == HostelId);

        if (hostel is not null)
        {
          Hostel = hostel;
        }
      }
    }
    finally
    {
      Busy = false;
    }
  }

  private async Task ValidationResultAsync(bool success)
  {
    if (Busy)
    {
      return;
    }

    if (!success)
    {
      Error = false;
      return;
    }

    Busy = true;

    try
    {
      if (Context is not null && Hostel is not null)
      {
        @* SetExistingCodePlaceholder *@
        @* if (Hostel.Emulator != null && Hostel.Emulator.Id != Guid.Empty)
        {
          var existingEmulator = await Context.Emulators.FindAsync(Hostel.Emulator.Id);
          if (existingEmulator != null)
          {
            Hostel.Emulator = existingEmulator;
          }
        } *@
        
        if (IsAdd && Context.Hostels != null)
        {
          Context.Hostels.Add(Hostel);
        }
        
        await Context.SaveChangesAsync();
      }

      Navigation.NavigateTo($"/admin/hostel/view/{Hostel?.Id}");
    }
    catch (DbUpdateConcurrencyException dbex)
    {
      var dbValues = dbex.Entries[0].GetDatabaseValues();

      if (dbValues is null)
      {
        Navigation.NavigateTo($"/admin/hostel/view/{Hostel?.Id}");
        return;
      }

      DbHostel = (Hostel)dbValues.ToObject();

      dbex.Entries[0].OriginalValues.SetValues(dbValues);
      Error = false;
      Busy = false;
    }
    catch (Exception ex)
    {
      Error = true;
      ErrorMessage = ex.Message;
      Busy = false;
    }
  }

  private void Cancel()
  {
    Busy = true;
    Navigation.NavigateTo($"/admin/hostel");
  }

  public void Dispose() => Context?.Dispose();
}
