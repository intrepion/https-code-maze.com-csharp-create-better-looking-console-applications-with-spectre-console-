@page "/admin/student/add"
@page "/admin/student/edit/{StudentId:guid?}"
@rendermode InteractiveServer
@implements IDisposable
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>Student @(IsAdd ? "Add" : "Edit")</PageTitle>

@if (Student is null && !Busy && !IsAdd)
{
  <p>Could not find Student with id @StudentId.</p>
}
else
{
    @* EmulatorList="EmulatorList" *@
  <StudentForm
    HostelList="HostelList"
    Busy="Busy" 
    CancelRequest="Cancel"
    DbStudent="DbStudent" 
    Student="Student" 
    IsAdd="IsAdd"
    ValidationResult="@(async (success) => await ValidationResultAsync(success))"
  />
}

@if (Error)
{
  <br />
  <div class="alert alert-danger">Failed to @(IsAdd ? "add" : "update") the Student (@ErrorMessage).</div>
}

@code {
  [Parameter]
  public Guid? StudentId { get; set; }

  private bool IsAdd => StudentId == null;

  private ApplicationDbContext? Context { get; set; }

  private Student? Student { get; set; }

  private Student DbStudent { get; set; } = new Student();

  private List<Hostel> HostelList { get; set; } = new List<Hostel>();
  @* ListDeclarationCodePlaceholder *@
  @* private List<Emulator> EmulatorList { get; set; } = new List<Emulator>();*@

  private bool Busy;

  private bool Error;

  private string ErrorMessage = string.Empty;

  protected override async Task OnInitializedAsync()
  {
    Busy = true;

    try
    {
      Context = DbFactory.CreateDbContext();

      if (Context.Hostels != null)
      {
        HostelList = await Context.Hostels.ToListAsync();
      }
      @* LoadListCodePlaceholder *@
      @* if (Context.Emulators != null)
      {
        EmulatorList = await Context.Emulators.OrderBy(e => e.Name).ToListAsync();
      } *@

      if (IsAdd)
      {
        Student = new();
      }
      else if (Context is not null && Context.Students is not null)
      {
        var student = await Context.Students
            .Include(x => x.Hostel)
            @* IncludeListCodePlaceholder *@
            @* .Include(e => e.Emulator) *@
            .SingleOrDefaultAsync(x => x.Id == StudentId);

        if (student is not null)
        {
          Student = student;
        }
      }
    }
    finally
    {
      Busy = false;
    }
  }

  private async Task ValidationResultAsync(bool success)
  {
    if (Busy)
    {
      return;
    }

    if (!success)
    {
      Error = false;
      return;
    }

    Busy = true;

    try
    {
      if (Context is not null && Student is not null)
      {
        @* SetExistingCodePlaceholder *@
        @* if (Student.Emulator != null && Student.Emulator.Id != Guid.Empty)
        {
          var existingEmulator = await Context.Emulators.FindAsync(Student.Emulator.Id);
          if (existingEmulator != null)
          {
            Student.Emulator = existingEmulator;
          }
        } *@
        
        if (IsAdd && Context.Students != null)
        {
          Context.Students.Add(Student);
        }
        
        await Context.SaveChangesAsync();
      }

      Navigation.NavigateTo($"/admin/student/view/{Student?.Id}");
    }
    catch (DbUpdateConcurrencyException dbex)
    {
      var dbValues = dbex.Entries[0].GetDatabaseValues();

      if (dbValues is null)
      {
        Navigation.NavigateTo($"/admin/student/view/{Student?.Id}");
        return;
      }

      DbStudent = (Student)dbValues.ToObject();

      dbex.Entries[0].OriginalValues.SetValues(dbValues);
      Error = false;
      Busy = false;
    }
    catch (Exception ex)
    {
      Error = true;
      ErrorMessage = ex.Message;
      Busy = false;
    }
  }

  private void Cancel()
  {
    Busy = true;
    Navigation.NavigateTo($"/admin/student");
  }

  public void Dispose() => Context?.Dispose();
}
