@page "/admin/student"
@rendermode InteractiveServer
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>Student Home</PageTitle>

<h1>Student Home</h1>
<h6><a href="/admin/student/add">Create New</a></h6>

<div class="container-fluid">
  <table class="table table-hover table-primary table-striped">
    <thead>
      <tr>
        <th>Actions</th>
        <th>Age</th>
        <th>First Name</th>
        <th>Hostel</th>
        <th>Last Name</th>
        @* TableHeaderCodePlaceholder *@
      </tr>
    </thead>
    <tbody>
      @if (students is not null)
      {
        @foreach (var student in students)
        {
          <tr>
            <td>
              <div class="btn-group">
                <a class="btn btn-primary btn-sm btn-info" href="/admin/student/view/@student.Id" title="View">
                  <i class="bi bi-eye"></i>
                </a>
                <a class="btn btn-primary btn-sm" href="/admin/student/edit/@student.Id" title="Edit">
                  <i class="bi bi-pencil"></i>
                </a>
              </div>
            </td>
            <td>@student?.Age</td>
            <td>@student?.FirstName</td>
            <td>@student?.Hostel?.Name</td>
            <td>@student?.LastName</td>
            @* TableRowCodePlaceholder *@
          </tr>
        }
      }
    </tbody>
  </table>
</div>

@code {
  private ICollection<Student>? students { get; set; }

  protected override async Task OnParametersSetAsync()
  {
    await ReloadAsync();
  }

  private async Task ReloadAsync()
  {
    students = new List<Student>();

    using var context = DbFactory.CreateDbContext();
    var query = context.Students?.AsQueryable();

    if (query is not null)
    {
      students = await query
        .Include(x => x.Hostel)
        @* QueryIncludeCodePlaceholder *@
        .AsNoTracking().ToListAsync();
    }
  }
}

